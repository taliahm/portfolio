@import '/partials/*'
// @import '/partials/normalize.css'
// @import '/partials/s'

html
	font-size 62.5%
body
	font-family sanSerif
	overflow-x hidden

h1
	// font-family serif
	// color blue
	font-size 4rem
	
h1, h2, h3, h4, h5
	margin 0
	
// .headerAndProfileWrap
// 	background white
// 	padding-bottom 150px
// 	clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 87%)
.wrapper 
	max-width 1900px
	margin 0 auto
	
.headerAndProfileWrap
	position relative
	
header
	background purple
	min-height 80vh
	z-index -1
	display flex
	position relative
	// clip-path: polygon(0 0, 100% 0, 100% 87%, 0 100%)
	padding 100px 0 50px 0
	angled-edge('outside bottom', 'lower right', purple, 1600, 250)

.menu 
	position absolute
	right 0
	top 0
	padding 30px 40px 0 0
	z-index 5
	

.menu a
	font-size 3rem
	color white
//This is all the header floating images
.bgrndImgContain
	position absolute

.pinkLine
	top -90%
	left 55%
	
.pinkLine img
	height 75px
	
.blueSquiggle
	bottom -90%
	right 15%

.blueSquiggle img
	height 75px

.greenArrow
	bottom -90%
	right 75%

.greenArrow img
	height 75px
	
.header__text 
	transform rotate(-90deg)
	// transform-origin: bottom center
	color black
	margin auto
	// align-self flex-end
	// margin 0 auto
	position relative
	// bottom 0
	// left 50%

.header__text h1 
	margin 0
	font-size 8rem
	color white
	line-height 0.7
	text-transform uppercase


.header__text h2
	font-size 6.5rem
	color white
	text-transform uppercase
	line-height 0.9

.header__text h4
	font-size 2rem
	color pink
	
	 
.profileWrap
	padding-top 150px
	padding-bottom 150px
	display flex
	flex-direction column
	align-items center
	// padding-bottom 350px
	// background yellow
		

//REUSED THROUGHOUT
.section__header
	text-align center
	// max-width 20%
	margin 0 auto 70px auto
	display flex
	flex-direction column

.section__header h1
	text-transform uppercase
	font-size 8rem
	letter-spacing 1.5px	
	
.section__header h5
	text-align right
	align-self center
	font-size 2rem
	margin-left 50px
	font-family serif

.gallery__header h5:before, .skills__header h5:before, .profile__header h5:before
	textDeco(black)
	

//SHAPES in Profile section
.profile__header
	position relative

.profileBgrnd
	position absolute

.smallPurpleCircle
	bottom -95%
	right -155%

.smallPurpleCircle img
	height 75px

.triangleCircle
	top 0
	left -150%

.triangleCircle img
	height 150px


//THESE ARE INSIDE OF THE LARGE DIV
.profileContain
	display flex
	margin 0 auto
	// justify-content center
	align-items center
	justify-content center
	position relative
	bottom 25px
	// z-index 99

.profile__imgContain
	width 25%
	position relative

.profile__imgContain img
	max-width 100%
	position relative
	z-index 100

.profile__text
	font-size 1.7rem
	width 30%
	position relative
	z-index 101
	left -30px
	color darken(grey, 40)
	// align-self flex-end

.profile__text p:first-child
	line-height 1.5
	// font-family serif
	font-size 2rem
	letter-spacing 1.1px
	color pink
	
.profile__text p:last-child
	font-size 1.5rem
	margin-top 20px
	letter-spacing 1.08px
	line-height 1.3

.greyCircle
	// height 100px
	position absolute
	bottom -50%
	left -50%
	z-index 95
	

.greyCircle img
	height 400px
	

.skills
	background offWhite
	// clip-path polygon(0 0, 100% 15%, 100% 87%, 0 100%)
	angled-edge('outside top', 'upper right', offWhite, 1600, 250)
	angled-edge('outside bottom', 'lower right', offWhite, 1600, 250)
	display flex
	align-items center
	justify-content center
	flex-direction column
	padding 150px 0 250px 0
	

.skillsContain
	list-style none
	display flex
	flex-wrap wrap
	justify-content center
	max-width 50%
	padding 0
	margin 0 auto

.skill__item
	font-size 2rem
	display flex 
	flex-direction column
	align-items center
	justify-content center
	margin 40px 40px 0 40px
	text-align center
	box-shadow 0 30px 25px lightgrey
	transition all 0.3s ease-in
	// transform scale(1)
	padding 5px 15px
	span.break 
		display block

.skill__item:hover
	box-shadow 2px 2px 15px lightgrey
	// transform scale(0.99)

.skill__iconContain
	font-size 5rem
	color purple
	

//GALLERY Sections

.gallery
	position relative
	padding-top 150px
	padding-bottom 250px

.galleryBgrnd
	position absolute

.purplePinkTriangle
	right -2%
	top 5%

.purplePinkTriangle img
	height 250px
	
.galleryBlueLines
	left 2%
	bottom 30%

.galleryBlueLines img
	height 100px
	

.pinkCircle
	left 2%
	bottom 20%

.pinkCircle img
	height 100px


.gallery__header
	padding-top 150px

.gallery__containItems
	display flex
	flex-direction column
	align-items center
	margin 0 auto
	max-width 60%
	
.gallery__item
	display flex
	align-items center
	margin 75px 0 

.gallery__itemDescription
	// position relative
	// z-index 5
	// background transparentify(offWhite, 0.9)
	padding 10px 20px
	max-width: 50%;
	font-size 1.3rem

.gallery__item--imgFirst
	left -20px
	margin-left: 50px;
	
.gallery__item--imgSecond
	right -20px
	text-align right
	margin-right 50px

.gallery__item .imgContain
	width 100%
	position relative
	overflow hidden
	max-width 40%
	box-shadow 2px 30px 30px grey
	transition all 0.3s ease-in-out
	

.gallery__item .imgContain:hover
	box-shadow 4px 5px 30px grey

.gallery__item .imgContain img 
	max-width 100%
	display block
	transform scale(1)
	transition all 0.3s ease-in-out
	box-shadow: -5px 30px 30px lightgrey
	


.gallery__itemDescription h4
	font-size 3rem
	font-weight 400
	margin-bottom 10px

.gallery__item .itemDescription__list
	list-style none
	display flex
	padding 0

.gallery__item .itemDescription__list--imgSecond
	justify-content flex-end

.gallery__item .itemDescription__list li
	margin 0 5px
	border 1px solid purple
	padding 3px
	font-size 1.4rem

.gallery__item a
	text-decoration none
	// color pink
	background purple
	padding 5px 10px
	color white
	font-size 1.8rem
	margin-bottom 10px
	display inline-block
	// letter-spacing 1.2px
	// margin-right 10px
	transform scale(1)
	transition all 0.3s ease-in
	&:hover
		background pink

.gallery__itemDescription .viewLive--right
	margin-right 10px
	// margin-left 20px
	// display inline-block

.greyDots--relative
	position relative
	
.decoContain.greyDots
	position absolute
	right -100px
	top 50px
	z-index -2

.decoContain.greyDots .portfolioAccent
	height 350px


.blueTriangle
	position absolute
	bottom 60px
	left -10px
	z-index 2
	overflow visible

.blueTriangle img
	height 250px

.contact
	background purple
	// clip-path polygon(0 0, 100% 27%, 100% 100%, 0 100%)
	angled-edge('outside top', 'upper right', purple, 1600, 250)
	display flex
	flex-direction column
	// justify-content center
	align-items center
	position relative
	// overflow visible

.contactBgrndImg 
	position absolute

.contactGreenArrow
	bottom 20%
	left 10%

.contactGreenArrow img
	height 75px
	transform rotate(90deg)

.contactPinkLine
	bottom 50%
	right 10%

.contactPinkLine img
	height 75px
	transform rotate(45deg)

.contact__header
	padding-top 250px
	color white

.contact__header h5:before
	textDeco(white)

.contact__text
	color white

.contact__text h4
	font-size 4rem
	color white

.contact__text p
	text-align center
	font-size 1.4rem
	text-transform uppercase
	margin 80px 0 40px 0
	
.social
	list-style none
	display flex
	justify-content center
	padding 0
	
.social li
	margin 0 10px 0 10px

.social li a
	color pink
	font-size 3rem
	transition all 0.3s ease-in
	&:hover
		color white

.contact form
	margin-top 40px
	// width 25%
	
.formList
	list-style none
	padding 0
	
.formList li 	
	margin 10px 0 10px 0
	display flex
	align-items flex-end

.formList li:nth-child(4)
	margin-top 30px
	
.formList li label 
	color white
	font-size 1.8rem
	margin-right 7px

.formList input[name=contact]
	background none
	border none
	outline none
	padding 10px 5px
	transition all 0.3s ease-in
	width 100%
	// border-top 1px solid black
	border-bottom 1px solid darken(purple, 20)
	
.formList textarea
	background none
	border none
	outline none
	padding 10px 5px
	transition all 0.3s ease-in
	width 100%
	height 75px
	resize none
	border-top 1px solid darken(purple, 20)
	border-bottom 1px solid darken(purple, 20)

.formList input[name=contact]:focus, .formList textarea:focus
	outline 1px solid pink	
	background lighten(purple, 10)
	border none
	
.formList input[type=submit]
	color pink
	background none
	outline none
	border none
	margin 0 auto
	font-size 2rem
	text-transform uppercase
	border 1px solid pink
	padding 10px 50px
	margin-top 30px
	transition all 0.3s ease-in
	&:hover
		color white
		border 1px solid white
	&:active
		color lighten(purple, 10)

footer
	margin-top 80px
	padding-bottom 40px
	text-align center

footer p
	margin 0
	font-size 1.4rem
	

