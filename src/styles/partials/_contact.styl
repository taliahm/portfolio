.contact
	background purple
	angled-edge('outside top', 'upper right', purple, 1900, 350)
	display flex
	flex-direction column
	align-items center
	position relative

.contactBgrndImg 
	position absolute

.contactGreenArrow
	bottom 20%
	left 10%
	+for_bp(lrg)
		bottom 5%
	+for_bp(med)
		bottom 5%
	+for_bp(sml)
		bottom 5%
		left 0

.contactGreenArrow svg
	height 75px
	fill none
	stroke #50EFCB

.contactPinkLine
	bottom 50%
	right 10%
	+for_bp(sml)
		display none


.contactPinkLine svg
	height 75px
	stroke #F05689
	fill none
	transform rotate(45deg)
	+for_bp(sml)
		transform rotate(0deg)
		
.contactBlueCircle
	bottom -50px
	right 5%
	+for_bp(med)
		display none
	+for_bp(sml)
		display none

.contactBlueCircle svg
	height 250px
	stroke #458BC9
	fill none
	stroke-width:16


.contact__header
	color white
	+for_bp(sml)
		padding-top 0

.contact__header h5:before
	textDeco(white)

.contact__text
	color white

.contact__text h4
	font-size 4rem
	color white
	+for_bp(sml)
		font-size 2rem
		letter-spacing 1.2px

.contact__text p
	text-align center
	font-size 1.4rem
	text-transform uppercase
	margin 80px 0 40px 0
	
.social
	list-style none
	display flex
	justify-content center
	padding 0
	
.social li
	margin 0 10px 0 10px

.social li a
	font-size 3rem
	transition all 0.3s ease-in
	color pink
	&:hover 
		color #50efcb


.contact form
	margin-top 40px
	// width 25%
	
.formList
	list-style none
	padding 0
	
.formList li 	
	margin 10px 0 10px 0
	display flex
	align-items flex-end

.formList li:nth-child(4)
	margin-top 50px
	
.formList li label 
	color offWhite
	font-size 1.8rem
	margin-right 7px

.formList input[name=contact]
	background none
	border none
	outline none
	padding 10px 5px 
	transition all 0.3s ease-in
	width 100%
	font-size 1.6rem
	letter-spacing 1.4px
	color offWhite
	border-bottom 1px solid white
	
.formList textarea
	background none
	border none
	outline none
	padding 10px 5px
	transition all 0.3s ease-in
	width 100%
	height 95px
	resize none
	border-top 1px solid white
	border-bottom 1px solid white
	color offWhite
	font-size 1.6rem
	letter-spacing 1.4px

.formList input[name=contact]:focus, .formList textarea:focus
	outline 1px solid pink	
	background lighten(purple, 10)
	border none
	
.formList input[type=submit]
	color pink
	background none
	outline none
	border none
	margin 0 auto
	font-size 2rem
	text-transform uppercase
	border 1px solid pink
	padding 10px 70px
	margin-top 40px
	font-weight bold
	transition all 0.3s ease-in
	&:hover
		color white
		border 1px solid white
	&:active
		color lighten(purple, 10)

.smallFooter
	margin-top 90px
	padding-bottom 40px
	text-align center
	color white
	letter-spacing 1.2px

.smallFooter p
	margin 0
	font-size 1.4rem
	
