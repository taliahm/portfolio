.contact
	background purple
	angled-edge('outside top', 'upper right', purple, 1900, 250)
	display flex
	flex-direction column
	align-items center
	position relative

.contactBgrndImg 
	position absolute

.contactGreenArrow
	bottom 20%
	left 10%
	+for_bp(lrg)
		bottom 5%
	+for_bp(med)
		bottom 5%
	+for_bp(sml)
		bottom 5%

.contactGreenArrow img
	height 75px
	transform rotate(90deg)

.contactPinkLine
	bottom 50%
	right 10%
	+for_bp(sml)
		bottom 62%
		right -2%


.contactPinkLine img
	height 75px
	transform rotate(45deg)
	+for_bp(sml)
		transform rotate(0deg)
		

.contact__header
	padding-top 250px
	color white
	+for_bp(sml)
		padding-top 0

.contact__header h5:before
	textDeco(white)

.contact__text
	color white

.contact__text h4
	font-size 4rem
	color white
	+for_bp(sml)
		font-size 2rem
		letter-spacing 1.2px

.contact__text p
	text-align center
	font-size 1.4rem
	text-transform uppercase
	margin 80px 0 40px 0
	
.social
	list-style none
	display flex
	justify-content center
	padding 0
	
.social li
	margin 0 10px 0 10px

.social li a
	color pink
	font-size 3rem
	transition all 0.3s ease-in
	&:hover
		color white

.contact form
	margin-top 40px
	// width 25%
	
.formList
	list-style none
	padding 0
	
.formList li 	
	margin 10px 0 10px 0
	display flex
	align-items flex-end

.formList li:nth-child(4)
	margin-top 30px
	
.formList li label 
	color white
	font-size 1.8rem
	margin-right 7px

.formList input[name=contact]
	background none
	border none
	outline none
	padding 10px 5px
	transition all 0.3s ease-in
	width 100%
	// border-top 1px solid black
	border-bottom 1px solid darken(purple, 20)
	
.formList textarea
	background none
	border none
	outline none
	padding 10px 5px
	transition all 0.3s ease-in
	width 100%
	height 75px
	resize none
	border-top 1px solid darken(purple, 20)
	border-bottom 1px solid darken(purple, 20)

.formList input[name=contact]:focus, .formList textarea:focus
	outline 1px solid pink	
	background lighten(purple, 10)
	border none
	
.formList input[type=submit]
	color pink
	background none
	outline none
	border none
	margin 0 auto
	font-size 2rem
	text-transform uppercase
	border 1px solid pink
	padding 10px 50px
	margin-top 30px
	transition all 0.3s ease-in
	&:hover
		color white
		border 1px solid white
	&:active
		color lighten(purple, 10)

footer
	margin-top 80px
	padding-bottom 40px
	text-align center

footer p
	margin 0
	font-size 1.4rem
	
